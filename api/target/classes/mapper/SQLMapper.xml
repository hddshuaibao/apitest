<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.weixt.model">
    <select id="loginCase" parameterType="Integer" resultType="com.weixt.model.LoginCase" >
        select * from loginCase
        where id=#{id}
    </select>

    <select id="versionListCase" parameterType="Integer" resultType="com.weixt.model.GetParam">
        select * from param
        where id=#{id}
    </select>

    <select id="cost_type_configSaveCase" parameterType="Integer" resultType="com.weixt.model.GetParam">
        select * from  param where id=#{id}

    </select>

    <select id="cost_type_listCostTypeCase" parameterType="Integer" resultType="com.weixt.model.GetParam">
        select * from param where id=#{id}

    </select>
    <select id="cost_type_config" parameterType="Integer" resultType="com.weixt.model.CostTypeConfig">
        select id,is_show,title,orderid from cost_type_config where campusid=#{campusid} order by update_time desc,orderid asc

    </select>
    <select id="cost_type_list" parameterType="Integer" resultType="com.weixt.model.CostTypeConfig">
        select id,is_show,title,orderid from cost_type_config where campusid=#{campusid} order by orderid

    </select>

    <select id="cost_day_record" parameterType="String" resultType="com.weixt.model.CostDayRecord">
        select id from cost_day_record where campusid = 196 and record_date=#{record_date}

    </select>

    <select id="cost_Init_Balance" parameterType="String" resultType="com.weixt.model.CostBalance">
        select * from cost_campus_balance where campusid = 196 and create_time like #{create_time}

    </select>
    <select id="cost_type_config_updated" parameterType="BigInteger" resultType="com.weixt.model.CostTypeConfig">
        select * from cost_type_config where id=#{id}

    </select>


</mapper>